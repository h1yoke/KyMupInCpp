// КуМир base interpretator header
#pragma once

/* Check КуМир language interpretator constant */
#if !defined(__КуМир)
#define __КуМир
#endif /* !defined(__КуМир) */

/* Use КуМир interpretator */
#ifdef __КуМир

/*** Check КуМир pre-include preferences ***/
/* Disabling base VS-compiler warnings */
#ifdef КУМИР_WARNINGS_DISABLE
# pragma warning(disable: 4010) // 'comment next line moving'
# pragma warning(disable: 4702) // 'unreachable code'
# pragma warning(disable: 4003) // 'not enough actual parameters for macro'
#endif /* КУМИР_WARNINGS_DISABLE */

/* Declare C++ constant */
#ifdef __cplusplus
#define __сиплюсплюс
#endif /* __cplusplus */

/* Declare nodebug mode constant */
#ifdef NDEBUG
#define НЕТДЕБАГ
#define НЕТАНТИЖУК
#endif /* __NDEBUG */

/* Declare debug mode constant */
#if defined(_DEBUG) || !defined(_NDEBUG)
#define _ДЕБАГ
#define _АНТИЖУК
#endif /* _DEBUG */

/*** КуМир library include ***/
#include "KyMup\КуПодключения"

#include "KyMup\КуЧертежник"
#include "KyMup\КуВодолей"
#include "KyMup\КуСКлассами"

/*** Useful supported types redeclaration ***/
#define объяви                   // let interpretator know about creating variable
#define автоматическую auto      // pointer type
#define неотрицательную unsigned // use [0...TYPE_MAX] type

/* Low level simple data types */
#define очень long      // huge prefix type
#define большую long    // huge type
#define среднюю short   // middle type
#define маленькую char  // small type
#define слово short     // 'word'
#define стандартную int // standart type

/* Empty data type definition */
#define пусто void

/* Common 'main' function interpretation */
#define нач {         // begin
#define кон }         // end
#define гл_алг main   // 'main' function name interpretation
#define KyMain гл_алг // 'main' function name interpretation

/* КуМир loop interpretation */
#define нц while ( // begin loop
#define пока       // condition empty command
#define кц )       // end loop

/* КуМир conditional choice interpretation */
#define если if (  // if
#define то )       // then
#define иначе else // else

/* КуМир logical constants */
#define в             // 'into'
#define правда TRUE   // truth
#define ложь FALSE    // lie
#define всегда TRUE   // forever
#define никогда FALSE // never
#define не !          // not
#define и &&          // and
#define или ||        // or

/*** Кумир libraries usage interpretation ***/
#define использовать using // 'use'

/* Allocate memory methods */
#define новую new    // allocate memory for variable command
#define удали delete // free memory from variable command
#define массивную [] // multiple memory releasing command

/* КуМир Commenting implementation */
#define __Ky_slash /
#define комментарий __Ky_slash/

/* Set russian time region and encoding */
#define говори_по_русски(A) setlocale(LC_ALL, "Russian")

#endif /* __КуМир */

/* END OF 'КуМир' FILE */
