/***                                   ***
  *                                     *
  *     Файл работы со случайными       *
  *             величинами              *
 ***                                   ***/

#pragma once

/* Проверка подключения основного файла библиотеки */
#ifdef __КуМир

/* Подключение необходимых заголовка */
#include <cstdlib>
#include <ctime>

/* Название моудля 'вертун' */
#define вертун std

/* Функции получения случайного числа */
#define случайное_число rand
#define СЛУЧ_МАКС RAND_MAX
#define случайное_целое(Нижн, Верх) ((Нижн) + случайное_число() % ((Верх) + 1 - (Нижн)))
#define случаное_дробное() случайное_число() / (вещественное)СЛУЧ_МАКС

/* Функции установки сида случайных чисел */
#define установи_сид_рандома(Сид) srand(Сид)
#define обнови_рандом() установи_сид_рандома((unsigned)clock())

#endif /* __КуМир */
